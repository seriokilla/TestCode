<div class="col-md-4">
	<ul id="showlist"></ul>
</div>

<div>
	<form id="saveContactForm" method="post">
		<h3>Create a new SearchProvider</h3>
		<p>
			<label for="Name">Name:</label>
			<input type="text" name="Name" />
		</p>
		<p>
			<label for="Description">Desc:</label>
			<input type="text" name="Description" />
		</p>
		<p>
			<label for="ID">ID:</label>
			<input type="text" name="ID" />
		</p>
		<input type="button" id="saveContact" value="Save" />
	</form>
</div>

@section scripts{
	<script type="text/javascript">
		$(function()
		{
			$.getJSON('/api/SearchProvider', function(bla)
			{
				$(bla).each(function (i, item)
				{
					$('#showlist').append('<li>' + item.Description + '</li>');
				});
			});
		});


		$('#saveContact').click(function () {
			$.post("api/SearchProvider",
						$("#saveContactForm").serialize(),
						function (value) {
							console.log($("#saveContactForm").serialize());
							$('#test').append('<li>' + value.Description + '</li>');
						},
						"json"
			);
		});

	</script>

}
